<ul class="shows">
    {{#if shows}}
    {{#each show}}
    <li>
        {{this.id}}
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devour" value="true">
            <button type="submit">Devour it!</button>
        </form>
    </li>
    {{/each}}
    {{else}}
    <li>No Shows Currently Scheduled</li>
    {{/if}}
</ul>